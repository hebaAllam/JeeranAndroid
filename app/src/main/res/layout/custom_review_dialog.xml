<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <EditText
            android:id="@+id/review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="10dp"
            android:hint="@string/hint_name" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate service"
            android:layout_margin="9dp"
            android:textColor="@color/titlecolor"
            android:textSize="15dp"

            />
        <RatingBar
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/reviewRatingBar"
            android:layout_gravity="center_horizontal"
            style="?android:attr/ratingBarStyleIndicator"
            android:rating="0"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_rate"
            android:text="0.1"
            android:layout_margin="9dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialogCancel"
            android:text="Cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:background="@drawable/custom_but"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customDialogOk"
            android:text="OK"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/customDialogCancel"
            android:layout_toEndOf="@+id/customDialogCancel"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorAccent"
           android:background="@drawable/custom_but"
            />
    </RelativeLayout>


</LinearLayout>