<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:custom="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.HomeActivity"
    >
<com.daimajia.slider.library.SliderLayout
    android:id="@+id/slider"
    android:layout_width="match_parent"
    custom:pager_animation="Accordion"
    custom:auto_cycle="true"
    custom:indicator_visibility="visible"
    custom:pager_animation_span="1100"
    android:layout_height="200dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

<com.daimajia.slider.library.Indicators.PagerIndicator
    android:id="@+id/custom_indicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    custom:selected_color="#0095BF"
    custom:unselected_color="#55333333"
    custom:selected_drawable="@drawable/bird"
    custom:shape="oval"
    custom:selected_padding_left="5dp"
    custom:selected_padding_right="5dp"
    custom:unselected_padding_left="5dp"
    custom:unselected_padding_right="5dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    custom:selected_width="6dp"
    custom:selected_height="6dp"
    custom:unselected_width="6dp"
    custom:unselected_height="6dp"
    android:layout_marginBottom="20dp"
    />
<com.daimajia.slider.library.Indicators.PagerIndicator
    android:id="@+id/custom_indicator2"
    style="@style/AndroidImageSlider_Corner_Oval_Orange"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/slider"
        android:background="@color/home_service"
        android:id="@+id/serviceLayout"
        >


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/serviceBtn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_service_icon"
            android:text="Service"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/serviceLayout"
        android:background="@color/home_descusion"
        android:id="@+id/discussionLayout"
        >


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/discussionBtn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_discusion_icon"
            android:text="Discussion"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/discussionLayout"
        android:background="@color/home_realEstate"
        android:id="@+id/realEstateLayout"
        >


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/realEstateBtn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_realestate_icon"
            android:text="Real Estate"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            />
    </FrameLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:menu_colorNormal="@color/orange"
        app:menu_colorPressed="@color/orange"
        app:menu_colorRipple="@color/orange"
        android:paddingLeft="10dp"
        app:menu_fab_size="mini"
        app:menu_shadowColor="#000"
        app:menu_showShadow="true"
        app:menu_icon="@mipmap/ic_group_icon"
        app:menu_backgroundColor="@android:color/transparent"
        >

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            app:rippleColor="@color/orange"

            android:layout_height="wrap_content"
            android:src="@mipmap/ic_add_icon"
            android:background="@color/orange"
            app:fabSize="mini"


            app:fab_size="mini"
            app:fab_shadowColor="#000"
            app:fab_showShadow="true"
            android:id="@+id/fab"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:fab_colorNormal="@color/orange"
            app:fab_colorPressed="@color/orange"
            app:fab_colorRipple="@color/orange"

            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rippleColor="@color/orange"
            app:fabSize="mini"
            android:src="@mipmap/ic_search_icon"
            android:background="@color/orange"



            app:fab_size="mini"
            app:fab_shadowColor="#000"
            app:fab_showShadow="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:fab_colorNormal="@color/orange"
            app:fab_colorPressed="@color/orange"
            app:fab_colorRipple="@color/orange"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab34"
            app:fabSize="mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_home_icon"
            android:background="@color/orange"
            app:rippleColor="@color/orange"



            app:fab_size="mini"
            app:fab_shadowColor="#000"
            app:fab_showShadow="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:fab_colorNormal="@color/orange"
            app:fab_colorPressed="@color/orange"
            app:fab_colorRipple="@color/orange"
            />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>