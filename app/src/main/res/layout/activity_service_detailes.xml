<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
   <include
       layout="@layout/tool_bar"
       android:id="@+id/mytoolbarlayout"
       />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:id="@+id/mycard"
            android:layout_below="@+id/mytoolbarlayout"
            >
            <include
                layout="@layout/service_header"
                />
        </android.support.v7.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/mycard"
    android:id="@+id/txt_resut"
    android:text="Simillar Services"
    android:textColor="@color/titlecolor"
    android:layout_marginLeft="12dp"
    />

    <include layout="@layout/resturant_recycleview"
        android:layout_below="@+id/txt_resut"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

</RelativeLayout>