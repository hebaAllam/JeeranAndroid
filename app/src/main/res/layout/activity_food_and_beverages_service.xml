<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#fff"
        android:id="@+id/frameLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food and Beverages Services"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/titlecolor"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backFromFood"
            android:gravity="left"
            android:src="@drawable/ic_back_icon"

            />
    </FrameLayout>
    <com.daimajia.slider.library.SliderLayout

        android:id="@+id/sliderFood"
        android:layout_width="match_parent"
        custom:pager_animation="Accordion"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation_span="1100"
        android:layout_height="170dp"
        android:layout_alignTop="@+id/spinner1AreaFood" />

    <Spinner
        android:id="@+id/spinner1AreaFood"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"

        android:layout_below="@+id/frameLayout"
        android:layout_alignLeft="@+id/custom_indicatorFood"
        android:layout_alignStart="@+id/custom_indicatorFood" />

    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicatorFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:selected_color="#0095BF"
        custom:unselected_color="#55333333"
        custom:selected_drawable="@drawable/bird"
        custom:shape="oval"
        custom:selected_padding_left="5dp"
        custom:selected_padding_right="5dp"
        custom:unselected_padding_left="5dp"
        custom:unselected_padding_right="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        custom:selected_width="6dp"
        custom:selected_height="6dp"
        custom:unselected_width="6dp"
        custom:unselected_height="6dp"
        android:layout_marginBottom="20dp"
        />
    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:id="@+id/custom_indicator2Food"
        style="@style/AndroidImageSlider_Corner_Oval_Orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />
    <FrameLayout
        android:layout_below="@+id/sliderFood"
        android:layout_width="match_parent"
        android:layout_height="@dimen/smallSeparatorHeight"
        android:background="@color/colorAccent"
        android:id="@+id/separatorLayout"
        >
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/sliderFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/food_recycleView"

        >

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
