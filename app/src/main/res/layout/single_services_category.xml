<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/grey_200"
    android:orientation="vertical"


    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_200"

            >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sigleItem"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/grey_200"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:layout_alignParentTop="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/serviceCatImg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_help_icon"
                android:layout_marginTop="10dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/serviceCatName"
                android:layout_toRightOf="@+id/serviceCatImg"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:text="hello"
                android:textColor="@color/serviceCategoryFontColor"
                android:layout_marginTop="15dp"


                />

            <Button
                android:layout_width="45dp"
                android:layout_height="10dp"
                android:textColor="#fff"
                android:id="@+id/servicesNumber"
                android:background="@drawable/rounded_btn"
                android:text="10"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2"
                android:layout_alignBottom="@+id/serviceCatName"
                android:layout_alignTop="@+id/serviceCatImg" />
     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_next_icon"
         android:id="@+id/imageView2"
         android:layout_alignBottom="@+id/serviceCatName"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         android:layout_marginTop="10dp"
         />

</RelativeLayout>

        </RelativeLayout>

</LinearLayout>